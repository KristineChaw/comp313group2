@model StudentUploadsViewModel
@{
    bool currentUser = userManager.GetUserId(User) == Model.Student.Id;
    ViewBag.Title = $"{Model.Student}'s Documents";
}

<div class="row">
    <h2>
        Documents of @Model.Student
    </h2>
</div>

@if (Model.Uploads != null && Model.Uploads.Any())
{
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Action(s)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var document in Model.Uploads)
            {
                <tr>
                    <td>@document.Name</td>
                    @if (currentUser)
                    {
                        <td>
                            <a asp-controller="Account"
                               asp-action="ViewStudentFile"
                               asp-route-uploadId="@document.UploadId">View</a> | <a href="javascript:deleteDocument(@document.UploadId)">Delete</a>
                        </td>
                    }
                    else
                    {
                        <td>
                            <a asp-controller="Account"
                               asp-action="ViewStudentFile"
                               asp-route-uploadId="@document.UploadId">View</a>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <span>@(currentUser ? "You have not uploaded any document yet." : "This user has not uploaded any documents yet.")</span>
}

@if (currentUser)
{
    <a asp-controller="Account" asp-action="UploadStudentFile">Upload a Document</a>
}