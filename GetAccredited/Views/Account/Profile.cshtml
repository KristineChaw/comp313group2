@model ApplicationUser
@{ ViewBag.Title = "My Profile";}

<div class="row">
    <h2>
        My Profile
    </h2>
</div>

<div class="row">
    <div class="col span-1-of-1">
        <div class="profile_details_box">
            <h1 class="profile_details_title">
                @Model
            </h1><br>
            <p>Email Address: @Model.Email</p>
        </div>
        <div>
            <a class="profile_details_btn" asp-controller="Account"
               asp-action="Edit">Edit Profile</a>
            <a class="profile_details_btn" asp-controller="Account"
               asp-action="Uploads"
               asp-route-user="@Model.Id">My Documents</a>
            <a class="profile_details_btn" asp-controller="Account"
               asp-action="ChangePassword">Change Password</a>
            <a class="profile_details_btn" href="javascript:deleteAccount();">Delete My Account</a>
        </div>
    </div>
</div>